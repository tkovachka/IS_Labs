@{
}

@model EshopAdminApplication.Models.Order

<head>
    <title>Order Details</title>
</head>
<div class="container">
    <div>
        <p>Order for @Model.OwnerId</p>
    </div>

    <div class="row">
        @foreach (var product in Model.ProductInOrders)
        {
            var item = product.OrderedProduct;
            <div class="card col-3 m-2" style="width: 25rem">
                <img class="card-img-top h-75" src="@item.Concert.ConcertImage" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Concert.ConcertName</h5>
                    <p class="card-text">@item.Concert.ConcertDescription</p>
                    <h6>Price: @item.Price</h6>
                </div>

            </div>

        }
        </div>
</div>